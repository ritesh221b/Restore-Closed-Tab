{
  "name": "Restorify - Restore Closed Tab",
  "description": "Chrome Extension to restore your closed tabs in Google Chrome Browser",
  "version": "1.0",
  "background":{
    "scripts" : ["res/js/chromeBox.js","contextMenus.js"],
    "persistent":true
  },
  "browser_action": {
    "default_icon": "/res/images/logo.png",
    "default_title": "Restorify - Restore Closed Tab"
  },
  "icons": {
   "16": "res/images/logo.png",
   "32": "res/images/logo.png",
   "120": "res/images/logo.png" 
 },
 "permissions": [
  "contextMenus",
  "sessions"
], 
 "manifest_version":2
}